<%- include('../includes/app.ejs') %>


	<%- include('../includes/header.ejs') %>
		<!-- ================ start banner area ================= -->
		<section class="blog-banner-area" id="category">
			<div class="container h-100">
				<div class="blog-banner">
					<div class="text-center">
						<h1>Login / Reset Password</h1>
						<nav aria-label="breadcrumb" class="banner-breadcrumb">
							<ol class="breadcrumb">
								<li class="breadcrumb-item"><a href="#">Home</a></li>
								<li class="breadcrumb-item active" aria-current="page">Forget Password</li>
							</ol>
						</nav>
					</div>
				</div>
			</div>
		</section>
		<!-- ================ end banner area ================= -->

		<!--================Login Box Area =================-->
		<section class="login_box_area section-margin">
			<div class="container">
				<div class="row">
					<div class="col-lg-6">
						<div class="login_box_img">
							<div class="hover">
								<h4>Forget Password?</h4>
								<p>Dont you worry, Just enter your email and get password.</p>
								<a class="button button-account" href="/admin/register">Create an Account</a>
								<a class="button button-account" href="/admin/login">Login</a>
							</div>
						</div>
					</div>
					<div class="col-lg-6">
						<div class="login_form_inner">
							 
							<h3>Reset Password</h3>
							<form class="row login_form" action="/reset-password" id="contactForm" method="post">
								<% if(errorMessage) { %> 
									<div class="alert alert-danger form-control" role="alert">
										<%= errorMessage %> 
									</div>
								<% } %>
								<input type="hidden" value="<%= csrfToken %>" name="_csrf">
								<div class="col-md-12 form-group">
									<input type="email" class="form-control" id="email" name="email" placeholder="Email" required
										onfocus="this.placeholder = ''" onblur="this.placeholder = 'Email'">
								</div>
								<div class="col-md-12 form-group">
									<button type="submit" value="submit" class="button button-login w-100">
										Send Reset Link
									</button>
								</div>
							</form>
						</div>
					</div>
				</div>
			</div>
		</section>
		<!--================End Login Box Area =================-->




		<%- include('../includes/footer.ejs') %>